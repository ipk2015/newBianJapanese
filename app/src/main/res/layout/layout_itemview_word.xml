<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:paddingVertical="@dimen/common_padding_vertical"
              android:paddingHorizontal="@dimen/common_padding_horizontal"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView_writing_word_item_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/passage_text_size"
        android:layout_weight="5"/>
    <TextView
        android:id="@+id/textView_pos_word_item_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/passage_text_size"
        android:layout_weight="2"/>
    <TextView
        android:id="@+id/textView_meaning_word_item_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/passage_text_size"
        android:layout_weight="3"/>
</LinearLayout>